<script id="template-models-list" type="text/template">
<div class="row span12">
	<div class="hero-unit">
		<h1>Existing Models</h1>
		<p>Click on each model to add/remove or modify attributes</p>
	</div>
	<ul class="unstyled">
		<li ng-repeat="model in models">
			<h2><a href="/cms/models/details/{{model.identity}}">{{model.globalId}}</a></h2>
			<ul ng-show="showProperties">
				<!-- dont show auto-generated properties -->
				<li ng-repeat="attr in model.schema" ng-show="!autoGenerated(attr._key)">
					<span ng-class="{autoGenerated: autoGenerated(attr._key)}">{{attr._key}} ({{attr.type}})</span>
				</li>
			</ul>
		</li>
	</ul>
	<form class="form-horizontal">
		<div class="control-group">
		    <label class="checkbox">
				<input type="checkbox" ng-model="showProperties">Show Properties
		    </label>
	   	</div>
	</form>
</div>
</script>