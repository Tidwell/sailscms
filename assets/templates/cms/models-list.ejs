<script id="template-models-list" type="template/html">
<div class="hero-unit">
	<h1>Existing Models</h1>
	<p>Click on each to see additional information</p>
</div>
<div class="row">
	<ul class="unstyled">
		<li ng-repeat="model in models">
			<h2><a href="/cms/models/details/{{model.identity}}">{{model.globalId}}</a></h2>
			<ul ng-show="showProperties">
				<li ng-repeat="attr in model.schema">
					<span ng-class="{autoGenerated: autoGenerated(attr.key)}">{{attr.key}} ({{attr.type}})</span>
				</li>
			</ul>
		</li>
	</ul>
	<form class="form-horizontal">
		<div class="control-group">
		    <label class="checkbox">
				<input type="checkbox" ng-model="showProperties">Show Properties
		    </label>
	   	</div>
	</form>
</div>
</script>