<p class="navbar-text pull-right" ng-show="authenticated">
  Logged in as
  <a href="#" class="navbar-link">{{user.username}}</a>
</p>
<form class="navbar-form pull-right" ng-show="!authenticated">
  <div class="control-group" ng-class="{error: error}">
    <span class="help-inline" ng-show="error">{{error}}</span>
    <input class="span2" type="text" placeholder="Username" ng-model="username">
    <input class="span2" type="password" placeholder="Password" ng-model="password">
    <button type="submit" class="btn" ng-click="signIn()">Sign in</button>
  </div>
</form>